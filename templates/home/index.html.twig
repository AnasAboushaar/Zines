{% extends 'base.html.twig' %}

{% block title %}Magazines !{% endblock %}

{% block body %}

<h1 class='text-primary p-3'>List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Détails</th>
            </tr>
        </thead>
        <tbody>
            {% for magazine in magazines %}
                <tr>
                    <td>{{ magazine.name }}</td>
                    <td>
                        <a href="">Voir plus de détail</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
